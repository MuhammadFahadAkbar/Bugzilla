
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Deadline</th>
    <th>Screenshot</th>
    <th>Type</th>
    <th>Status</th>
    <th colspan="2"></th>
  </tr>

  <% @bugs.each do |bug| %>
    <tr>
      <td><%= bug.title %></td>
      <td><%= bug.description %></td>
      <td><%= bug.deadline %></td>
      <td><%= image_tag bug.screenshot, width:"50px" if bug.screenshot.attached? %></td>
      <td><%= bug.bugtype %></td>
      <td><%= bug.status %></td>
      <td><%= link_to 'Show', bug_path(bug) %></td>
      <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
      <td><%= link_to 'Destroy', bug_path(bug),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>
  <br>
